{
  "name": "@aicacia/quill-rich-editor",
  "version": "0.1.0",
  "description": "aicacia quill rich editor",
  "repository": {
    "type": "git",
    "url": "https://github.com/aicacia/ts-quill-rich-editor"
  },
  "type": "commonjs",
  "module": "esm/index.js",
  "main": "cjs/index.js",
  "types": "cjs/index.d.ts",
  "styles": "cjs/index.css",
  "scripts": {
    "build": "tsc",
    "buildESM": "rollup -c",
    "buildCSS": "node-sass src/ -o cjs/ && mkdir -p esm && cp cjs/*.css esm/",
    "doc": "typedoc",
    "prepublishOnly": "npm run clean && npm run build && npm run buildESM && npm run buildCSS",
    "test": "ts-node node_modules/.bin/tape src/**/*.test.{ts,tsx} | tap-spec",
    "bench": "ts-node node_modules/.bin/tape src/**/*.benchmark.{ts,tsx} | tap-spec",
    "coverage": "nyc --reporter=lcov --check-coverage --lines=75 --require ts-node/register tape src/**/*.test.{ts,tsx} | tap-spec; nyc report ---reporter=text",
    "clean": "rm -rf esm cjs",
    "lint": "eslint . --fix",
    "prettier": "prettier --ignore-path .eslintignore --ignore-unknown --write .",
    "preCommit": "npm run prettier && npm run lint && npm run coverage && npm run prepublishOnly",
    "example": "parcel serve example/index.html"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run preCommit"
    }
  },
  "keywords": [
    "quill",
    "rich",
    "editor"
  ],
  "author": "Nathan Faucett",
  "license": "(MIT OR Apache-2.0)",
  "readmeFilename": "README.md",
  "devDependencies": {
    "@rollup/plugin-commonjs": "20",
    "@rollup/plugin-node-resolve": "13",
    "@rollup/plugin-typescript": "8",
    "@aicacia/debounce": "^0.1.10",
    "@parcel/transformer-sass": "next",
    "@types/deepmerge": "2",
    "@types/quill": "2.0.4",
    "@types/tape": "4",
    "@typescript-eslint/eslint-plugin": "4",
    "@typescript-eslint/parser": "4",
    "eslint": "7",
    "eslint-config-prettier": "8",
    "eslint-plugin-prettier": "3",
    "husky": "4",
    "node-sass": "6",
    "nyc": "15",
    "parcel": "next",
    "prettier": "2",
    "rollup-plugin-esm-import-to-url": "2",
    "rollup-plugin-terser": "7",
    "quill": "2.0.0-dev.4",
    "tap-nyc": "1",
    "tap-spec": "5",
    "tape": "5",
    "ts-node": "9",
    "tslib": "2",
    "typedoc": "0",
    "typescript": "4.3"
  },
  "dependencies": {
    "long-press-event": "2"
  },
  "peerDependencies": {
    "quill": "2.0.0-dev.4",
    "tslib": "2"
  },
  "nyc": {
    "include": [
      "src"
    ],
    "exclude": [
      "src/**/*.test.*"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ]
  }
}
